#include <iostream>
using namespace std;

int main()
{
    int units;
    double baseBill = 0, surcharge = 0, finalBill;

    cout << "Enter total consumed units: ";
    cin >> units;

    if(units <= 100)
    {
        baseBill = units * 10;
    }
    else if(units <= 300) 
    {
        baseBill = 100 * 10 + (units - 100) * 15;
    }
    else
    {
        baseBill = 100 * 10 + 200 * 15 + (units - 300) * 20;
    }

    if(baseBill > 10000)
    {
        surcharge = baseBill * 0.05;
    }

    finalBill = baseBill + surcharge;

    cout << "Base Bill: Rs. " << baseBill << endl;
    cout << "Surcharge: Rs. " << surcharge << endl;
    cout << "Final Payable Bill: Rs. " << finalBill << endl;

    return 0;
}
