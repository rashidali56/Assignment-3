#include <iostream>

using namespace std;

double compoundInterest(double principal, double rate, int time)
{
    double amount = principal;
    for (int i = 1; i <= time; i++)
    {
        amount = amount + (amount * rate / 100);
    }
    return amount;
}

int main()
{
    double principal, rate;
    int time;

    cout << "Enter principal amount:" << endl;
    cin >> principal;

    cout << "Enter annual interest rate (%):" << endl;
    cin >> rate;

    cout << "Enter time in years:" << endl;
    cin >> time;

    double amount = compoundInterest(principal, rate, time);

    cout << "Compound interest amount after " << time << " years is: " << amount << endl;

    return 0;
}
