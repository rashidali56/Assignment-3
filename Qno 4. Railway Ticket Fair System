#include <iostream>
using namespace std;

int main()
{
    int seatType;
    double distance, fare;

    cout << "Seat Types:" << endl;
    cout << "1. Economy → Rs. 5 per km" << endl;
    cout << "2. Business → Rs. 8 per km" << endl;
    cout << "3. First Class → Rs. 12 per km" << endl;

    cout << "Enter your seat choice (1-3): ";
    cin >> seatType;

    cout << "Enter distance in km: ";
    cin >> distance;

    switch(seatType)
    {
        case 1:
            fare = distance * 5;
            cout << "Total fare (Economy): Rs. " << fare << endl;
            break;

        case 2:
            fare = distance * 8;
            cout << "Total fare (Business): Rs. " << fare << endl;
            break;

        case 3:
            fare = distance * 12;
            cout << "Total fare (First Class): Rs. " << fare << endl;
            break;

        default:
            cout << "Invalid seat type selected!" << endl;
            break;
    }

    return 0;
}
